<div class="dashboard-container">
  <div class="dashboard-header">
    <p>ðŸ‘‹ Welcome, Attendee #{{userId}}</p>
    <a href="/logout" class="btn logout-btn">Logout</a>
  </div>

  <h2>My RSVPs</h2>
    {{#if rsvpedEvents.length}}
    {{#each rsvpedEvents}}
        <div class="event-card">
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p><strong>Location:</strong> {{this.location}}</p>
        <p><strong>Time:</strong> {{this.time}}</p>
        <form action="/cancel-rsvp/{{this.id}}" method="POST">
            <button type="submit" class="btn cancel-btn">Cancel RSVP</button>
        </form>
        </div>
    {{/each}}
    {{else}}
    <p>You haven't RSVP'd to any events yet.</p>
    {{/if}}
  
<h2>All Upcoming Events</h2>

  {{#if allEvents.length}}
    {{#each allEvents}}
      <div class="event-card">
        <h3>{{this.title}}</h3>
        <p>{{this.description}}</p>
        <p><strong>Location:</strong> {{this.location}}</p>
        <p><strong>Time:</strong> {{this.time}}</p>
        <p><strong>By Organizer ID:</strong> {{this.createdBy}}</p>
        <form action="/rsvp/{{this.id}}" method="POST">
            <button type="submit" class="btn rsvp-btn">RSVP</button>
        </form>
      </div>
    {{/each}}
  {{else}}
    <p>No events available at the moment.</p>
  {{/if}}
</div>
